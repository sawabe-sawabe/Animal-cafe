<div class = "container mb-5">
   <div class = "Inup">
     <div class="row">
       <h2 class='mt-5 mx-auto'>ログイン</h2>
     </div>
     <div class='row text-center'>
       <div class="col-md-6 mx-auto">
        <%= form_with model: @user, url: user_session_path, local: true do |f| %>

        <div class="form-group mt-5">
          <div class="col-md-6 mx-auto" ><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control",placeholder: "メールアドレス" %></div>
        </div>

       <div class="form-group mt-5">
        <div class="col-md-6 mx-auto"><%= f.password_field :password, autocomplete: "current-password", class: "form-control",placeholder: "パスワード" %></div>
       </div>

       <div class="actions mt-4">
         <%= f.submit "ログイン", class: 'btn btn-secondary' %></dd>
       </div>

       <% end %>
       <h4 class='mt-5'>会員登録がお済みでない方はこちら</h4>
       <p class='mt-4 mb-5'><%= link_to "新規登録", new_user_registration_path ,class: "btn btn-secondary "%></p>
     </div>
   </div>
 </div>
</div>