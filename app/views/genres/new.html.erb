<div class="container mb-5">
  <div class="alert-warning mt-1 text-center"> <%= alert %> </div>
  <div class="post mt-5 pb-5">
    <div class="row ">
     <h2 class= 'mt-5 mx-auto'>ジャンル一覧・追加</h2>
    </div>
    <div class="row mt-3">
　　  <div class="col-6 mx-auto">
         <%= form_with model:@genre, local:true do |f|%>

         <div>
           <h4><i class="fas fa-paw mr-2"></i>ジャンル名</h4>
           <table>
             <tr>
               <td>
                  <h4><%= f.text_field :name,placeholder: "20文字以内"  %></h4>
               </td>
               <td>
                 <h4><%= f.submit '新規登録' , class: 'btn btn-info'%></h4>
               </td>
             </tr>
           </table>
         </div>
        <%end%>

         <h4 class="mt-3">ジャンル一覧</h4>
         <table>
           <thead>
             <tr>
               <th>
                 <h5 class="mt-3" >ジャンル名</h5>
               </th>
               <th></th>
              </tr>
            </thead>
           <% @genres.each do |genre|%>
            <tbody>
              <tr>
                <td>
                  <h5 class="mr-5"><%= genre.name %></h5>
                </td>
                <td>
                 <h5  class="mt-3" ><%= link_to "編集する", edit_genre_path(genre.id) ,class: 'btn btn-info' %></h5>
                </td>
               </tr>
             </tbody>
            <% end %>
           </table>
      </div>
    </div>
  </div>
</div>