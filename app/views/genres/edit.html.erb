<div class="container">
  <div class="alert-warning mt-1 text-center"> <%= alert %> </div>
  <div class="post mt-5 pb-5">
    <div class="row ">
     <h2 class= 'mt-5 mx-auto'>ジャンル編集</h2>
    </div>
　　<div class="row mt-3">
　　  <div class="col-md-6 mx-auto">
         <%= form_with model:@genre, local:true do |f|%>
         <%= render 'layouts/errors', obj:  @genre %>
        <div>
          <h4><i class="fas fa-paw mr-2"></i>ジャンル名</h4>
          <table>
            <tr>
              <td>
                <h4><%= f.text_field :name ,class:"w-100"%></h4>
              </td>
              <td>
                <h4><%= f.submit '編集を保存' , class: 'btn btn-info'%></h4>
               </td>
             </tr>
           </table>
         </div>
        <%end%>
  </div>
</div>