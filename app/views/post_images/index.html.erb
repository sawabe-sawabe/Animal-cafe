<div class="container">
  <div class="row mt-2">
     <%= link_to "新規投稿", new_post_image_path ,class: "btn btn-secondary "%>
  </div>
  <div class="row mt-2 ">
   <% @post_images.each do |post_image| %>
    <div class="card mr-5">
      <div class="card-body p-2 "> <p class="card-text pl-3"><%= post_image.title %></p></div>
      <p class="mx-3 mb-0"><%=link_to post_image_path(post_image.id) do %><%= attachment_image_tag post_image, :image,  size: "280x300" %><% end %></p> <%#refileを使用しているため%>
      <table class="text-center">
       <tr>
         <td> <i class="fas fa-user"><%=link_to user_path(post_image.user.id) do %>
           <%= post_image.user.name%>
           <%end%>
         </td>
         <td><%= post_image.created_at.strftime('%Y/%m/%d') %></td>
       </tr>
       <tr>
         <td ><pclass="mt-2"><%= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id) %><p></td>

         <td class=" favorite-btn"><p  class="mt-2"><%= render "favorites/favorite-btn", post_image: post_image %></p></td>　<%#非同期通信化するため%>
       </tr>
      </table>
    </div>
   <% end %>
  </div>
 </div>