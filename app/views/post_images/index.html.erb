<% @post_images.each do |post_image| %>
<div>
  <p><%= post_image.title %></p>
  <%= attachment_image_tag post_image, :image,  size: "280x280" %> <%#refileを使用しているため%>
  <p><%= post_image.user.name%></p>
  <p><%= post_image.genre.name %></p>
  <% if post_image.favorited_by?(current_user) %>
    <p>

        ♥<%= post_image.favorites.count %>

    </p>
  <% else %>
    <p>
      <%= link_to post_image_favorites_path(post_image), method: :post do %>
        ♡<%= post_image.favorites.count %>
      <% end %>
    </p>
  <%end%>
    <p><%= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id) %></p>
<% end %>

