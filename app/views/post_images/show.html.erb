<div class="container">
   <div class="row">
    <table class="my-2">
   <td><h4 class=" post_image"><i class="fas fa-camera mr-2"></i><%= @post_image.title %></h4></td>
   
   </table>
 </div>
  <div class="row post_image">

  <p class="col-6 card"> <%= attachment_image_tag @post_image, :image,  size: "540x550" ,class:"card-img my-3"%></p><%#refileを使用しているため%>
  <div class ="col-6 text-center mt-5 ">
  <h4><i class="fas fa-comment-dots mr-2"></i><%= @post_image.caption %></h4>
  <h4 class="mt-5" >ジャンル<i class="fas fa-paw ml-1"><%= @post_image.genre.name %></i></h4>
  <h4 class="mt-5"><i class="fas fa-user mr-1"></i><%= @post_image.user.name %></h4>
 <% if @post_image.user == current_user %>
    <p ><%= link_to "削除", post_image_path(@post_image), method: :delete %></p>
 <% end %>
  <h4 class="favorite-btn mt-5"><%= render "favorites/favorite-btn", post_image: @post_image %></h4>　<%#非同期通信化するため%>
  <h5>コメント件数<i class="fas fa-comments ml-1"><%= @post_image.post_comments.count%></i></h5>
  <h5 class=" mt-5">投稿日時 <i class="fas fa-clock ml-1"><%= @post_image.created_at.strftime('%Y/%m/%d') %></i></h5>
</div>
 
</div>
<div class="comments">
 <%= render "post_images/comment", post_image: @post_image,post_image: @post_image %>　<%#非同期通信化するため%>
</div>