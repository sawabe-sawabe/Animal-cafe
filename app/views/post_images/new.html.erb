<h4>新規投稿</h4>
 <%= form_with model:@post_image,local:true do |f| %>
 <div>
   <label>写真</label>
   <%= f.attachment_field :image %>
 </div>
 <div>
   <label>ジャンル</label>
   <%= f.collection_select(:genre_id, Genre.all, :id, :name, {prompt: "--選択してください--"})  %>
 </div>
 <div>
   <label>タイトル</label>
    <%= f.text_field :title, size: 30 %>
 </div>
 <div>
   <label>写真説明</label>
    <%= f.text_field :caption, size: "30x5" %>
 </div>
 <div>
   <%= f.submit "投稿"  %>
 </div>
  <% end %>