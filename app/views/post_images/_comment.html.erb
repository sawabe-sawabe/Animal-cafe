
  <table class="mr-0 mb-5">
  <thead class="mt-4">
   <th> <h4 class="mt-2 ml-2"><i class="fas fa-comments ml-1 mr-2"></i>コメント</h4></th>
  </thead>
  <% @post_image.post_comments.each do |post_comment| %>
  <tbody>
   <tr class="mt-2">
  <td><p class="ml-5"><%= post_comment.created_at.strftime('%Y%m%d')%></p></td>
  <td><p class="ml-5"><%= attachment_image_tag post_comment.user,:profile_image_url, format: 'image', size: "50x50" , format: 'jpeg', fallback: "no_image.jpg" %></p><p class="ml-5"><%= post_comment.user.name%></p></td>
  <td><p class="ml-5"><%= post_comment.comment %></p></td>
   <% if current_user == post_comment.user %>
     <td><p class="btn btn-secondary  ml-5 float-right"><%= link_to 'Destroy', post_image_post_comment_path(post_comment.post_image_id, post_comment.id),method: :delete ,remote: true ,class:"link"%><% end %></p></td>
<% end %>
  </tr>
  </tbody>
  </table>

  <div class="new-comment ml-5">
  <%= form_with(model:[@post_image,@post_comment],remote: true) do |f| %>
  <p class="input-group">
  <%= f.text_area :comment, rows:'1', placeholder:"コメントをここに" ,class: "form-control  mr-0 d-block ",size: "120x1" %> <%= f.submit"送信",class: " submit btn btn-secondary"%>
  <% end %>
  </p>