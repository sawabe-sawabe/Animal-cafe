<% if @range == '2' %>
<div class="container">
  <div class="alert-warning mt-1 text-center"> <%= alert %> </div>
  <div class="row mt-2">
   <h2 class="title"> "<%=params[:word]%>"の検索結果</h2>
  </div>
  <div class="row mt-2 ml-3">
   <% @post_image.each do |post_image| %>
    <div class="card mr-5 mb-5">
      <div class="card-body p-2 "> <p class="card-text pl-3"><i class="fas fa-camera mr-2"></i><%= post_image.title %></p></div>
      <p class="mx-3 mb-0"><%=link_to post_image_path(post_image.id) do %><%= attachment_image_tag post_image, :image,  size: "280x300" %><% end %></p> <%#refileを使用しているため%>
      <table class="text-center">
       <tr>
         <td> <i class="fas fa-user"><%=link_to user_path(post_image.user.id) do %>
           <%= post_image.user.name%>
           <%end%>
         </td>
         <td><i class="fas fa-clock ml-1"></><%= post_image.created_at.strftime('%Y/%m/%d') %></td>
       </tr>
       <tr>
         <td ><pclass="mt-2"><i class="fas fa-comments mr-1"></i><%= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id) %><p></td>

         <td class=" favorite-btn"><p  class="mt-2"><%= render "favorites/favorite-btn", post_image: post_image %></p></td>　<%#非同期通信化するため%>
       </tr>
      </table>
    </div>
   <% end %>
  </div>
 </div>


<% else %>
<div class="container mb-5">
  <div class="alert-warning mt-1 text-center"> <%= alert %> </div> <%# 検索機能のエラー時flashメッセージを表示する %>
    <div class="row mt-4">
      <h2 class="title">"<%=params[:word]%>"の検索結果</h2>
   <div class="row mt-3 profile title">
     <div class="mx-5 my-5 w-100 ">
      <%  @user.each do |user| %>
      <table class="mx-5 mb-4">
        <tr>
          <td>
             <h4 class="ml-2"><%= attachment_image_tag user,:profile_image, format: 'image', size: "80x100" , format: 'jpeg', fallback: "no_image.jpg" ,class:"img-thumbnail"%></h4>
          </td>
          <td>
             <h4 class="ml-5"><i class="fas fa-user mr-1"><%=user.name%></i></h4>
          </td>
          <td>
             <h4><i class="fas fa-comment-alt mr-2 ml-4"></i>ひとこと<h4><h5 class=" ml-5"><%= user.word %></h5>
          </td>
          <td >
             <h4 class="ml-5 btn btn-secondary "><%=link_to "ユーザーページ",user_path(user.id) ,class:"link"%></h4> <%# マイページへ飛ぶのをわかりやすくするためボタン設置 %>
          </td>
        <% unless user == current_user %>
          <%if current_user.following?(user)%>
          <td class="ml-5">
             <h4 class="  btn btn-dark ml-4"><%=link_to "フォローを外す",user_relationships_path(user.id),method: :delete,class:"link" %></h4>
          </td>
         <% else %>
          <td>
             <h4 class=" btn btn-info ml-4"><%= link_to "フォローをする",user_relationships_path(user.id),method: :post,class:"link"%></h4>
          </td>
         <% end %>
        <% end %>
    </tr>
  </table>
  <% end %>
 </div>
<div>
<% end %>