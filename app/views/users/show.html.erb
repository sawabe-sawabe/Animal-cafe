<div class="container mb-5">
  <div class="alert-warning mt-1 text-center"> <%= alert %> </div>
  <div class="row mt-4">
    <h2 class="title"><%= @user.name%>さんのマイページ</h2>
  </div>
  <div class="row mt-3 title">
   <div class="col-4 ">
   <table class="mt-4">
      <tr>
        <td ><%= attachment_image_tag @user,:profile_image_url, format: 'image', size: "100x110" , format: 'jpeg', fallback: "no_image.jpg",class:"img-thumbnail ml-3" %></td>
        <td>
         <h4 class="ml-1">  <i class="fas fa-user mr-1"></i><%=@user.name %></h4>
         <h5 class="mt-3"> フォロー<%= link_to " #{@user.followings.count}", user_followings_path(@user.id) %></h5>
         <h5  class="mt-3">フォロワー<%= link_to " #{@user.followers.count}",  user_followers_path(@user.id) %></h5>
        </td>
      </tr>

      <tr>
        <td><h5 class="mt-3"><i class="fas fa-comment-alt mr-2"></i>ひとこと</h5></td>
        <td><h5 class="mt-3"><%=@user.introduction %></h5></td>
      </tr>
      <tr>
        <td><h5 class="mt-3"><i class="fas fa-cat mr-2"></i>好きな動物</h5></td>
        <td><h5 class="mt-3"><%=@user.favorite_animal %></h5></td>
      </tr>
      <tr>
        <td><h5 class="mt-3"><i class="fas fa-dog mr-2"></i>飼っている動物</h5></td>
        <td><h5 class="mt-3"><%=@user.having_pets %></h5></td>
      </tr>
      <tr>
        <td><h5 class="mt-3"><i class="fas fa-heart mr-2"></i>お気に入り</h5></td>
        <td><h5 class="mt-3">
           <%= link_to  user_favorites_path(@user.id)  do %>
           <%= @user.favorites.count %>
           <% end %></h5>
        </td>
      </tr>
      <tr>
        <td><h5 class="mt-3"><i class="fas fa-comments mr-2"></i>コメント</h5></td>
        <td><h5 class="mt-3"><%= link_to "#{@post_comments.count} コメント",  user_post_comments_path(@user.id) %></h5></td>
      </tr>
 

   </table>
    <% unless @user == current_user %>
    <%if current_user.following?(@user)%>
     
        <h5 class="btn btn-dark"><%=link_to "フォローを外す",user_relationships_path(@user.id),method: :delete,class:"link"%></5>
     
    <% else %>
    
       <h5 class="btn btn-info"><%= link_to "フォローをする",user_relationships_path(@user.id),method: :delete,method: :post,class:"link"%></5>
      
    <% end %>
  <% end %>
    <h5 class="btn btn-info"><%= link_to "編集", edit_user_path(@user.id),class:"link" %></5>
 </div>

 <% @post_images.each do |post_image| %>
    <div class="  card ml-5 mr-3 mb-5 mt-5">
      <div class="card-body p-2 "> <p class="card-text pl-3"><i class="fas fa-camera mr-2"></i><%= post_image.title %></p></div>
      <p class="mx-3 mb-0"><%=link_to post_image_path(post_image.id) do %><%= attachment_image_tag post_image, :image,  size: "250x300" %><% end %></p> <%#refileを使用しているため%>
      <table class="text-center">
       <tr>
         <td> <i class="fas fa-user"><%=link_to user_path(post_image.user.id) do %>
           <%= post_image.user.name%>
           <%end%></i>
         </td>
         <td><i class="fas fa-clock ml-1"></><%= post_image.created_at.strftime('%Y/%m/%d') %></td>
       </tr>
       <tr>
         <td ><pclass="mt-2"><i class="fas fa-comments mr-1"></i><%= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id) %><p></td>

         <td class=" favorite-btn"><p  class="mt-2"><%= render "favorites/favorite-btn", post_image: post_image %></p></td>　<%#非同期通信化するため%>
       </tr>
      </table>
    </div>
   <% end %>
   </div>
</div>
</div>
</div>