<div class="container mb-5">
  <div class="alert-warning mt-1 text-center"> <%= alert %> </div>
  <div class="post mt-5 pb-5">
    <div class="row ">
       <h2 class= 'mt-5 mx-auto'>プロフィール編集</h2>
    </div>
   <div class="row ">
    <div class="col-6 mx-auto">
     <%= form_with model:@user,local:true do |f| %>
       <div class="mt-4">
         <h4><i class="fas fa-camera mr-2"></i>プロフィール画像 </h4>
          <h4 class="ml-5"><%= f.attachment_field :profile_image %></h4>
       </div>
       <div class="mt-2">
         <h4><i class="fas fa-dog mr-2"></i>飼っている動物</h4>
         <h4 class="ml-5"><%= f.text_field :having_pets, size: 40 %></h4>
       </div>
       <div>
         <h4><i class="fas fa-cat mr-2"></i>好きな動物</h4>
         <h4 class="ml-5"><%= f.text_field :favorite_animal, size: 40 %></h4>
       </div>
       <div>
         <h4><i class="fas fa-comment-alt mr-2"></i>ひとこと</h4>
         <h4 class="ml-5"> <%= f.text_area :introduction, size: "40x5" %></h4>
       </div>
       <div>
         <h5 class="text-center"><%= f.submit "投稿" , class: 'btn btn-info'  %></h5>
       </div>
      <% end %>
      </div>
     </div>
  </div>
 </div>
