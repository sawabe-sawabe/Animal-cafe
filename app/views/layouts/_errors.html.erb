<% if obj.errors.any? %>
  <div id="error_explanation">
  <div class=" list-group-item-danger">
    <h3><%= pluralize(obj.errors.count,"件") %>のエラーがありました！</h3>
    <ul>
      <% obj.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  </div>
<% end %>