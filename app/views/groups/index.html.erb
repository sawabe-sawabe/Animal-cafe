<div class="container mb-5">
  <div class="alert-warning mt-1 text-center"> <%= alert %> </div>
  <div class="row mt-5">
    <p> <%= link_to "新規作成", new_group_path ,class: "btn btn-secondary"%></p>
  </div>

  <div class="row mt-5 ml-3">
   <% @groups.each do |group| %>
    <div class="card mr-5 mb-5">
      <div class="card-body p-2 "> <p class="card-text pl-3"><i class="fas fa-camera mr-2"></i><%= group.title %></p></div>
      <p class="mx-3 mb-0"><%=link_to group_path(group.id) do %><%= attachment_image_tag group, :profile_image,  size: "280x300" %><% end %></p> <%#refileを使用しているため%>
      <table class="text-center">
       <tr>
         <td> <i class="fas fa-user">
           <%= group.word%>
        </td>

       </tr>
       <tr>
         <td><pclass="mt-2"><i class="fas fa-comments mr-1"></i><%= link_to "#{group.group_users.count} 人", group_users_path(group.id), method: :get %><p></td>
         <% if @group.joined_by?(current_user) %>
        <td> <%= link_to"グループを抜ける ", group_group_users_path (group.id), method: :delete,class:"btn btn-sm btn-danger" %></td>
         <% else %>
           <td><%= link_to "加入する", group_group_users_path(group.id), method: :post, class:"btn btn-sm btn-success " %></td>
            <% end %>
       </tr>
      </table>
    </div>
   <% end %>

  </div>
 </div>