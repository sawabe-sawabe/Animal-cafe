<div class="container mb-5">
  <div class="alert-warning mt-1 text-center"> <%= alert %> </div>
  <div class="post mt-5 pb-5">
    <div class="row ">
       <h2 class= 'mt-5 mx-auto'>グループ新規作成</h2>
    </div>
   <div class="row ">
    <div class="col-6 mx-auto">
     <%= form_with model:@group,local:true do |f| %>
      <%= render 'layouts/errors', obj: @group  %>
       <div>
         <h4><i class="fas fa-camera mr-2"></i>グループイメージ</h4>
          <h4 class="ml-5"><%= f.attachment_field :profile_image %></h4>
       </div>
       <div class="mt-2">
         <h4><i class="fas fa-users mr-2"></i>グループ名</h4>
         <h4 class="ml-5"><%= f.text_field :name, size: 40 %></h4>
       </div>
       <div>
         <h4><i class="fas fa-comment-alt mr-2"></i>ひとこと</h4>
         <h4 class="ml-5"><%= f.text_field :word, size: 40 %></h4>
       </div>
       <div>
         <h4><i class="fas fa-comment-dots mr-2"></i>グループ紹介</h4>
         <h4 class="ml-5"> <%= f.text_area :introduction, size: "40x5" %></h4>
       </div>
       <div>
         <h5 class="text-center"><%= f.submit "投稿" , class: 'btn btn-info'  %></h5>
       </div>
      <% end %>
      </div>
     </div>
  </div>
 </div>
