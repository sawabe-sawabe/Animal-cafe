<div class="container mb-5">
  <div class="alert-warning mt-1 text-center"> <%= alert %> </div>　<%# 検索機能のエラー時flashメッセージを表示する　%>
    <div class="row mt-4">
      <h2 class="title"><%= @group.name%>のグループページ</h2>
    </div>

    <div class="row mt-3 profile ">
      <div class="mt-4 col-4 mx-5 title">
        <p class="mt-3 ml-5">
          <%= attachment_image_tag @group,:profile_image, format: 'image', size: "300x110" , format: 'jpeg', fallback: "no_image.jpg",class:"img-thumbnail" %>
        </p>
    </div>
    <div class=" mt-5 col-6 title w-100 ml-5">
      <h4 class="">  <i class="fas fa-users mr-2"></i><%=@group.name %></h4>
      <h5 class="mt-3"><i class="fas fa-user-circle mr-2"></i>メンバー：<%=@group.group_users.count%> 人</h5>
      <h5 class="btn btn-info  mr-5 ml-4 mb-3 w-50"> <%= link_to "メンバー一覧へ",  group_group_users_path(@group.id), class: "link" %></h5>
      <h5 class="mr-5"> <i class="fas fa-comment-alt mr-2"></i>ひとこと<p class="mt-2"> <%= @group.word %></p></h5>
    </div>
    <div class=" w-100 title ml-5 mt-3">
      <h5 class="ml-5"> <i class="fas fa-comment-dots"></i>グループ紹介</h5>
      <h5 class="ml-5">  <%= @group.introduction %></5>
    </div>
    <div class=" w-100 title text-center">
      <% if @group.owner_id == current_user.id %>
       <h5 class="btn btn-info mt-3 mr-5 mb-3 w-50"><%=link_to "グループ編集",edit_group_path(@group.id),class:  "fas fa-users-cog link  "%></h5>
      <%elsif  @group.joined_by?(current_user) %>
       <h5 class="btn btn-dark mt-3 mx-5 mb-3  w-50"><%=link_to "グループから抜ける", group_group_users_path(@group.id),method: :delete,class:"fas fa-user-minus link"%></h5>
      <% else %>
       <h5 class="btn btn-info mt-3 mx-5  mb-3  w-50"><%= link_to "グループに加入する", group_group_users_path(@group.id),method: :post,method: :post,class:"fas fa-user-plus  link"%></h5>
      <% end %>
     </div>

     <h3 class="title w-100 ml-5 mt-4">メンバー投稿一覧</h3>
     <div class="row  ml-5 ">
      <% @post_images.each do |post_image| %>
        <div class="card ml-5 mr-3 mb-5 mt-4">
          <div class="card-body p-2 ">
            <p class="card-text pl-3"><i class="fas fa-camera mr-2"></i><%= post_image.title %></p>
          </div>
          <p class="mx-3 mb-0">
                <%=link_to post_image_path(post_image.id) do %><%= attachment_image_tag post_image, :image,  size: "250x300" %><% end %> <%#refileを使用しているため%>
          </p>
          <table class="text-center mt-2 ml-2 mb-2">
            <tr>
              <td>
                <i class="fas fa-user"><%=link_to user_path(post_image.user.id) do %>
                  <%= post_image.user.name%>
                  <%end%>
                </i>
              </td>
              <td>
                <i class="fas fa-clock ml-1"></><%= post_image.created_at.strftime('%Y/%m/%d') %>
              </td>
            </tr>
            <tr>
              <td>
                <i class="fas fa-comments mr-1"></i><%= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id) %>
              </td>
              <td id="post_image_<%= post_image.id %>">
                <%= render "favorites/favorite-btn", post_image: post_image %>　<%#非同期通信化するため%>
              </td>
             </tr>
           </table>
         </div>
        <% end %>
      </div>
   </div>
</div>
