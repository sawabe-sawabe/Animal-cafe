<div class="container">
  <div class="alert-warning mt-1 text-center"> <%= alert %> </div>
  <div class="row mt-2">
     <h2 class="title"><%= @user.name%>さんがコメントした投稿一覧</h2>
  </div>
  <div class="row mt-2 ml-3">
    
   <% @user.post_comments_images.each do |post_image| %>
  
    <div class="card mr-5 mb-5">
      <div class="card-body p-2 "> <p class="card-text pl-3"><i class="fas fa-camera mr-2"></i><%= post_image.title %></p></div>
      <p class="mx-3 mb-0"><%=link_to post_image_path(post_image.id) do %><%= attachment_image_tag post_image, :image,  size: "280x300" %><% end %></p> <%#refileを使用しているため%>
      <table class="text-center">
       <tr>
         <td> <i class="fas fa-user"><%=link_to user_path(post_image.user.id) do %>
           <%= post_image.user.name%>
           <%end%>
         </td>
         <td><i class="fas fa-clock ml-1"></><%= post_image.created_at.strftime('%Y/%m/%d') %></td>
       </tr>
       <tr>
         <td ><pclass="mt-2"><i class="fas fa-comments mr-1"></i><%= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id) %><p></td>

         <td class=" favorite-btn"><p  class="mt-2"><%= render "favorites/favorite-btn", post_image: post_image %></p></td>　<%#非同期通信化するため%>
       </tr>
      </table>
    </div>
   <% end %>
  
 
  </div>
 </div>